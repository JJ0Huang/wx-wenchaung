/**app.wxss**/
/* 布局 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.row{
	display: flex;
	flex-direction: row;
	justify-content: center;
}
.column{
	display: flex;
	flex-direction: column;
	justify-content: center;
}
/* 组件 */
.item-box{
	width: 690rpx;
	height: 150rpx;
	line-height: 130rpx;
	margin: 0rpx 10rpx 15rpx 10rpx;
	border-radius: 20rpx;
	padding: 0rpx 20rpx;
	color: #606266;
	font-size: 32rpx;
}
.input{
	border: 1px solid #ccc;
	border-radius: 20rpx;
	height: 70rpx;
	line-height: 70rpx;
	width: 670rpx;
	margin-left: 24rpx;
	padding: 0rpx 20rpx;
}
.textarea{
	border: 1px solid #ccc;
	border-radius: 20rpx;
	height: 300rpx;
	line-height: 55rpx;
	width: 670rpx;
	margin-left: 24rpx;
	padding: 0rpx 20rpx;
}
.fix_r{
	position: fixed;
	bottom: 180rpx;
	right: 10rpx;
	background: #f0f0f0;
	width: 70rpx;
	text-align: center;
}
.button{
  width: 730rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f0f0f0;
  color: #606266;
  font-weight: bold;
  margin-bottom: 30rpx;
}
/* 颜色 */
.bg1{
	background: #DCDFE6;
}
.bg_success{
	background: #67C23A;
	color: white;
}
.font{
	color: #606266;
	font-size: 30rpx;
}