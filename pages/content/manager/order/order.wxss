/* pages/content/manager/order/order.wxss */
@import '../../../../app.wxss';
.con{
  width: 750rpx;
  height: 100vh;
  background: #eeeeee;
  font-family: 'SimHei';
  color: #797979;
}
#refresh{
  width: 750rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  background: #08c27c;
  color: #ffffff;
}
.box{
  width: 680rpx;
  background: #ffffff;
  margin: 0rpx 35rpx 40rpx 35rpx;
  border-radius: 30rpx;
  float:left;
  padding-top: 15rpx;
}
image{
  width:170rpx;
  height:170rpx;
  float:left;
  margin-top: 15rpx;
}
.text{
  float:left;
  width: 470rpx;
  padding: 0rpx 20rpx;
}
.button_group{
  margin-top: 20rpx;
  float:left;
  width: 680rpx;
  height: 60rpx;
}
.btn{
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color:#ffffff;
}